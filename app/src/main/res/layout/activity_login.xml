<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/login_design"
    android:animateLayoutChanges="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp">

        <ImageView
            android:id="@+id/imageLogo_Login"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="30sp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/logo_Reg"
            android:scaleType="fitCenter"
            android:src="@drawable/logo1" />

        <RelativeLayout
            android:id="@+id/rl1Login"
            android:layout_width="match_parent"
            android:layout_height="368dp"
            android:layout_below="@+id/imageLogo_Login"
            android:layout_marginTop="0dp"
            android:visibility="gone"
            tools:ignore="DuplicateIds">

            <TextView
                android:id="@+id/text1_Login"
                android:layout_width="106dp"
                android:layout_height="53dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="219dp"
                android:layout_marginRight="219dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/tittle_login"
                android:textColor="@color/colorAllBlack"
                android:textSize="30sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linear1Login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text1_Login"
                android:layout_marginTop="14dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text2_Login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/adamina"
                    android:text="@string/userName"
                    android:textAllCaps="true"
                    android:textColor="@color/colorAllBlack"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/ET1_Login"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:autofillHints=""
                    android:background="@drawable/text_bg"
                    android:ems="10"
                    android:fontFamily="@font/adamina"
                    android:inputType="textPersonName"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/colorAllBlack"
                    android:textSize="15sp" />

                <TextView

                    android:id="@+id/text3_Login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/adamina"
                    android:text="@string/prompt_password"
                    android:textAllCaps="true"
                    android:textColor="@color/colorAllBlack"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/ET2_Login"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/text_bg"
                    android:ems="10"
                    android:fontFamily="@font/adamina"
                    android:inputType="textWebPassword"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/colorAllBlack"
                    android:textSize="15sp" />

            </LinearLayout>

            <Button
                android:id="@+id/button1_Login"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/linear1Login"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_bg"
                android:fontFamily="@font/adamina"
                android:paddingLeft="70dp"
                android:paddingRight="70dp"
                android:text="@string/btnLogin"
                android:textAllCaps="false"
                android:textColor="@color/colorAllBlack"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text4_Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/adamina"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingRight="20dp"
                android:paddingBottom="5dp"
                android:text="@string/rememberPass"
                android:textColor="@color/colorAllBlack"
                android:textSize="15sp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl3Login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone">


            <TextView
                android:id="@+id/text5_Login"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="11dp"
                android:fontFamily="@font/adamina"
                android:paddingLeft="10dp"
                android:text="@string/signUpText"
                android:textColor="@color/colorAllBlack"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/text6_Login"
                android:layout_width="81dp"
                android:layout_height="41dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="-3dp"
                android:layout_toEndOf="@+id/text5_Login"
                android:layout_toRightOf="@+id/text5_Login"
                android:fontFamily="@font/adamina"
                android:paddingRight="10dp"
                android:text="@string/signUpLogin"
                android:textColor="@color/yellowWelcome"
                android:textSize="18sp"
                android:textStyle="bold" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/google_Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl1Login"
            android:layout_marginTop="0dp"
            android:visibility="gone"
            app:srcCompat="@drawable/google_sign" />


    </RelativeLayout>

</RelativeLayout>