<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/login_design"
    android:animateLayoutChanges="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="120dp"
        android:layout_marginRight="40dp">

        <ImageView
            android:id="@+id/logoLogin"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/logo1" />

        <RelativeLayout
            android:id="@+id/rl1Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logoLogin"
            android:visibility="gone"
            android:layout_marginTop="35dp"
            tools:ignore="DuplicateIds">

            <TextView
                android:id="@+id/Text1Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="13dp"
                android:fontFamily="sans-serif-medium"
                android:text="Login"
                android:textColor="@color/colorAllBlack"
                android:textSize="30sp" />

            <LinearLayout
                android:id="@+id/linear1Login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Text1Login"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:id="@+id/linear2Login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Text2Login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:text="User Name"
                        android:textAllCaps="true"
                        android:textColor="@color/colorAllBlack"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/ET1Login"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/text_bg"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="@color/colorAllBlack"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/Text3Login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:text="Password"
                        android:textAllCaps="true"
                        android:textColor="@color/colorAllBlack"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/ET2Login"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/text_bg"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="@color/colorAllBlack"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>


            <Button
                android:id="@+id/btn1Login"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@id/linear1Login"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:background="@drawable/btn_bg"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="70dp"
                android:paddingRight="70dp"
                android:text="Login Here"
                android:textAllCaps="false"
                android:textColor="@color/colorAllBlack"
                android:textSize="16sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl2Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_below="@id/rl1Login"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@id/Text3Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't Remember Password?"
                android:textColor="@color/colorAllBlack"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:textSize="15sp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl3Login"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="236dp"
            android:layout_below="@id/rl2Login">

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="40dp"
                android:background="@color/colorAllBlack" />

            <TextView
                android:id="@+id/Text4Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="29dp"
                android:layout_marginBottom="60dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="@string/signUpText"
                android:textColor="@color/colorAllBlack"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Text5Login"
                android:layout_width="61dp"
                android:layout_height="35dp"
                android:layout_below="@+id/line"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="29dp"
                android:layout_marginEnd="60dp"
                android:layout_marginRight="60dp"
                android:layout_marginBottom="49dp"
                android:layout_toEndOf="@+id/Text4Login"
                android:layout_toRightOf="@+id/Text4Login"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="@string/signUpLogin"
                android:textColor="@color/colorAllBlack"
                android:textSize="18dp"
                android:textStyle="bold"
                tools:ignore="UnknownId" />


        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>


















