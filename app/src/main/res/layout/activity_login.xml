<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/login_design"
    android:animateLayoutChanges="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="110dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/logoLogin"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/logo1" />

        <RelativeLayout
            android:id="@+id/rl1Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:visibility="gone"
            android:layout_below="@+id/logoLogin"
            tools:ignore="DuplicateIds">

            <TextView
                android:id="@+id/Text1Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="30sp"
                android:textColor="@color/colorAllBlack"
                android:fontFamily="sans-serif-medium"
                android:text="Login"/>

            <LinearLayout
                android:id="@+id/linear1Login"
                android:layout_marginTop="10dp"
                android:layout_below="@id/Text1Login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linear2Login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Text2Login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:text="User Name"
                        android:textAllCaps="true"
                        android:textColor="@color/colorAllBlack"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/ET1Login"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/text_bg"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="@color/colorAllBlack"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/Text3Login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:text="Password"
                        android:textAllCaps="true"
                        android:textColor="@color/colorAllBlack"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/ET2Login"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/text_bg"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="@color/colorAllBlack"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>


            <Button
                android:layout_below="@id/linear1Login"
                android:id="@+id/btn1Login"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="50dp"
                android:text="Login Here"
                android:textAllCaps="false"
                android:background="@drawable/btn_bg"
                android:textColor="@color/colorAllBlack"
                android:fontFamily="sans-serif-medium"
                android:paddingRight="70dp"
                android:paddingLeft="70dp"
                android:layout_centerHorizontal="true"
                android:textSize="16sp" />

        </RelativeLayout>



    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl2Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_below="@id/rl1Login"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            tools:ignore="NotSibling">

            <TextView
                android:id="@id/Text3Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't Remember Password?"
                android:textColor="@color/colorAllBlack"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:textSize="15sp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"/>

        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl3Login"

        android:layout_width="match_parent"
        android:layout_height="236dp"
        android:layout_below="@id/rl2Login">
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="120dp"
            android:background="@color/colorAllBlack" />

        <TextView
            android:id="@+id/Text4Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="45dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="130dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="@string/signUpLogin"
            android:textColor="@color/colorAllBlack"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text4Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="39dp"
            android:layout_marginRight="39dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="@string/signUpLogin"
            android:textColor="@color/colorAllBlack"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>


















