<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="05dp"
    android:background="@drawable/card"
    android:onClick="btnAddAP"
    android:orientation="vertical"
    tools:context=".product.Add_Product"
    tools:ignore="OnClick">

    <TextView
        android:id="@+id/textViewAddPrdct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/addProduct"
        android:textAlignment="center"
        android:textColor="#E91E98"
        android:textSize="36sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageViewAP"
        android:layout_width="match_parent"
        android:layout_height="142dp"
        app:srcCompat="@drawable/images" />

    <EditText
        android:id="@+id/editTextNameAP"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/text"
        android:ems="10"
        android:hint="@string/name"
        android:inputType="textPersonName"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextDescripAP"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/text"
        android:ems="10"
        android:hint="@string/description"
        android:inputType="textPersonName"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextStsAP"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/text"
        android:ems="10"
        android:hint="@string/status"
        android:inputType="textPersonName"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextPriceAP"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/text"
        android:ems="10"
        android:hint="@string/price"
        android:inputType="textPersonName"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:textAlignment="center">

        <Button
            android:id="@+id/btnAddAP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn"
            android:onClick="btnAddAP"
            android:text="@string/add"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#E91E98"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnCncleAP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn"
            android:onClick="btnAddAP"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="#E91E98"
            android:textSize="30sp" />
    </LinearLayout>


</LinearLayout>