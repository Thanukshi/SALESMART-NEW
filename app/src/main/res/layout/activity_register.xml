<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/login_design"
    android:animateLayoutChanges="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="680dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="31dp">

        <ImageView
            android:id="@+id/imageLogo1_Register"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/logo1" />

        <ImageView
            android:id="@+id/image1_Register"
            android:layout_width="44dp"
            android:layout_height="41dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="285dp"
            android:layout_marginLeft="285dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:visibility="gone"
            app:srcCompat="@drawable/chevron_left_black"
            tools:ignore="VectorDrawableCompat" />

        <RelativeLayout
            android:id="@+id/RL1_Register"
            android:layout_width="317dp"
            android:layout_height="590dp"
            android:layout_below="@+id/imageLogo1_Register"
            android:layout_marginTop="-6dp"
            android:visibility="gone"
            tools:ignore="DuplicateIds">

            <TextView
                android:id="@+id/text1_Register"
                android:layout_width="142dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="183dp"
                android:layout_marginRight="183dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/signUpLogin"
                android:textColor="@color/colorAllBlack"
                android:textSize="30sp"
                android:textStyle="bold" />


            <LinearLayout
                android:id="@+id/linear3_Register"
                android:layout_width="match_parent"
                android:layout_height="429dp"
                android:layout_above="@+id/button1_Register"
                android:layout_marginBottom="4dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/addImage_Register"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="90dp"
                    android:src="@drawable/ic_add_a_photo" />

                <TextView
                    android:id="@+id/text2_Register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/adamina"
                    android:text="@string/fullName_Register"
                    android:textAllCaps="true"
                    android:textColor="@color/colorAllBlack"
                    android:textSize="15sp" />


                <EditText
                    android:id="@+id/ET1_Register"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/text_bg"
                    android:ems="10"
                    android:fontFamily="@font/adamina"
                    android:inputType="textPersonName"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/colorAllBlack"
                    android:textSize="15sp" />

                <TextView

                    android:id="@+id/text3_Register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/adamina"
                    android:text="@string/userName"
                    android:textAllCaps="true"
                    android:textColor="@color/colorAllBlack"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/ET2_Register"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/text_bg"
                    android:ems="10"
                    android:fontFamily="@font/adamina"
                    android:inputType="textPersonName"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/colorAllBlack"
                    android:textSize="15sp" />

                <TextView

                    android:id="@+id/tex4_Register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/adamina"
                    android:text="@string/prompt_password"
                    android:textAllCaps="true"
                    android:textColor="@color/colorAllBlack"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/ET3_Register"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/text_bg"
                    android:ems="10"
                    android:fontFamily="@font/adamina"
                    android:inputType="textPersonName"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/colorAllBlack"
                    android:textSize="15sp" />

                <TextView

                    android:id="@+id/text5_Register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/adamina"
                    android:text="@string/confirm_Register"
                    android:textAllCaps="true"
                    android:textColor="@color/colorAllBlack"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/ET4_Register"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/text_bg"
                    android:ems="10"
                    android:fontFamily="@font/adamina"
                    android:inputType="textPersonName"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/colorAllBlack"
                    android:textSize="15sp" />


            </LinearLayout>

            <Button
                android:id="@+id/button1_Register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="3dp"
                android:background="@drawable/btn_bg"
                android:fontFamily="@font/adamina"
                android:paddingLeft="55dp"
                android:paddingRight="55dp"
                android:text="@string/signUpLogin"
                android:textAllCaps="false"
                android:textColor="@color/colorAllBlack"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>