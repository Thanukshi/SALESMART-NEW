<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/login_design"
    android:animateLayoutChanges="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/imageLogo1_Register"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="30sp"
            android:src="@drawable/logo1"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <RelativeLayout
            android:id="@+id/RL1_Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageLogo_Register"
            android:layout_marginTop="17dp"
            android:visibility="gone"
            tools:ignore="DuplicateIds">

            <TextView
                android:id="@+id/text1_Register"
                android:layout_width="142dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="183dp"
                android:layout_marginRight="183dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/signUpLogin"
                android:textColor="@color/colorAllBlack"
                android:textSize="30sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linear2_Register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text1_Register"
                android:layout_marginTop="45dp">

                <LinearLayout
                    android:id="@+id/linear3_Register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text2_Register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/adamina"
                        android:text="@string/fullName_Register"
                        android:textAllCaps="true"
                        android:textColor="@color/colorAllBlack"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/ET1_Register"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/text_bg"
                        android:ems="10"
                        android:fontFamily="@font/adamina"
                        android:inputType="textPersonName"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="@color/colorAllBlack"
                        android:textSize="15sp" />

                    <TextView

                        android:id="@+id/text3_Register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/adamina"
                        android:text="@string/userMail_Register"
                        android:textAllCaps="true"
                        android:textColor="@color/colorAllBlack"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/ET2_Register"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/text_bg"
                        android:ems="10"
                        android:fontFamily="@font/adamina"
                        android:inputType="textPersonName"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="@color/colorAllBlack"
                        android:textSize="15sp" />

                    <TextView

                        android:id="@+id/text4_Register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/adamina"
                        android:text="@string/userName"
                        android:textAllCaps="true"
                        android:textColor="@color/colorAllBlack"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/ET3_Register"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/text_bg"
                        android:ems="10"
                        android:fontFamily="@font/adamina"
                        android:inputType="textPersonName"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="@color/colorAllBlack"
                        android:textSize="15sp" />

                    <TextView

                        android:id="@+id/tex5_Register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/adamina"
                        android:text="@string/prompt_password"
                        android:textAllCaps="true"
                        android:textColor="@color/colorAllBlack"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/ET4_Register"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/text_bg"
                        android:ems="10"
                        android:fontFamily="@font/adamina"
                        android:inputType="textPersonName"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="@color/colorAllBlack"
                        android:textSize="15sp" />

                    <TextView

                        android:id="@+id/text6_Register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/adamina"
                        android:text="@string/confirm_Register"
                        android:textAllCaps="true"
                        android:textColor="@color/colorAllBlack"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/ET5_Register"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/text_bg"
                        android:ems="10"
                        android:fontFamily="@font/adamina"
                        android:inputType="textPersonName"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="@color/colorAllBlack"
                        android:textSize="15sp" />


                </LinearLayout>

            </LinearLayout>


            <Button
                android:id="@+id/button1_Register"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/linear2_Register"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_bg"
                android:fontFamily="@font/adamina"
                android:paddingLeft="70dp"
                android:paddingRight="70dp"
                android:text="@string/signUpLogin"
                android:textAllCaps="false"
                android:textColor="@color/colorAllBlack"
                android:textSize="16sp"
                android:textStyle="bold" />

        </RelativeLayout>





    </RelativeLayout>





</RelativeLayout>