<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeMain_Register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@drawable/login_design">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relative1_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp">

        <ImageView
            android:id="@+id/logo_Register"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:contentDescription="@string/logo_Reg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo1" />

        <ImageView
            android:id="@+id/backArrow_Register"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="230dp"
            android:layout_marginLeft="230dp"
            android:contentDescription="@string/signUpLogin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/logo_Register"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/chevron_left_black"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/text1_Register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="110dp"
            android:layout_marginRight="110dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/signUpLogin"
            android:textColor="@color/colorAllBlack"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo_Register" />

        <LinearLayout
            android:id="@+id/linear_Register"
            android:layout_width="0dp"
            android:layout_height="438dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text1_Register">

            <ImageView
                android:id="@+id/addImage_Register"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_add_a_photo" />

            <TextView
                android:id="@+id/text2_Register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/adamina"
                android:text="@string/fullName_Register"
                android:textAllCaps="true"
                android:textColor="@color/colorAllBlack"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/ET1_Register"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/text_bg"
                android:ems="10"
                android:fontFamily="@font/adamina"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/colorAllBlack"
                android:textSize="15sp" />

            <TextView

                android:id="@+id/text3_Register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/adamina"
                android:text="@string/userName"
                android:textAllCaps="true"
                android:textColor="@color/colorAllBlack"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/ET2_Register"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/text_bg"
                android:ems="10"
                android:fontFamily="@font/adamina"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/colorAllBlack"
                android:textSize="15sp" />

            <TextView

                android:id="@+id/tex4_Register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/adamina"
                android:text="@string/prompt_password"
                android:textAllCaps="true"
                android:textColor="@color/colorAllBlack"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/ET3_Register"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/text_bg"
                android:ems="10"
                android:fontFamily="@font/adamina"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/colorAllBlack"
                android:textSize="15sp" />

            <TextView

                android:id="@+id/text5_Register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/adamina"
                android:text="@string/confirm_Register"
                android:textAllCaps="true"
                android:textColor="@color/colorAllBlack"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/ET4_Register"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/text_bg"
                android:ems="10"
                android:fontFamily="@font/adamina"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/colorAllBlack"
                android:textSize="15sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>