<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/card"

    tools:context=".product.Admin">



    <ImageView
        android:id="@+id/imageViewAD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/admin"
        android:textAlignment="center"
        />
    <ImageView
        android:id="@+id/imagelogoAD"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:srcCompat="@drawable/logo"
        android:textAlignment="center"
        />



    <Button
        android:id="@+id/buttonpur"
        android:layout_width="388dp"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/btn"
      android:text="Purches"
        android:textAllCaps="false"
        android:textColor="#E91E98"
        android:textSize="40sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/buttonfeed"
        android:layout_width="388dp"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/btn"
       android:text="Feedback"
        android:textAllCaps="false"
        android:textColor="#E91E98"
        android:textStyle="bold"
        android:textSize="40sp" />

    <Button
        android:id="@+id/buttoncust"
        android:layout_width="388dp"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/btn"
        android:text="Cutomer Details"
        android:textAllCaps="false"
        android:textColor="#E91E98"
        android:textSize="40sp"
        android:textStyle="bold"
        />

</LinearLayout>