<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/RL1_Prof"
    tools:context=".Profile"
    android:background="@drawable/profile_design">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profImage"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/person_add"
        app:civ_border_width="1dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="232dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/profText1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/profImage"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:fontFamily="@font/bitter_italic"
        android:gravity="center"
        android:textColor="@color/colorAllBlack"
        android:textSize="25sp" />



    <LinearLayout
        android:id="@+id/LL1_Prof"
        android:layout_width="355dp"
        android:layout_height="250dp"
        android:layout_below="@+id/profText1"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">


        <LinearLayout
            android:id="@+id/inLL1_Prof"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image1_ProfLL"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_person_fill"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/text1__ProfLL"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="TextView"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/inLL2_Prof"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image2_ProfLL"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_email"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/text2__ProfLL"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="TextView"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/inLL3_Prof"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image3_ProfLL"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_lock_prof"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/text3__ProfLL"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="TextView"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/inLL4_Prof"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/image4_ProfLL"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_local_phone"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/text4__ProfLL"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="TextView"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"/>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="400dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/btn_gradient_welcome"
        android:fontFamily="@font/bevan"
        android:text="@string/profButton"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>