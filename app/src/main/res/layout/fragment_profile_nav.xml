<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragProfile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileNav"
    android:background="@drawable/profile_design">


    <RelativeLayout
        android:id="@+id/RL1_Prof"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profImage"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="131dp"
            android:src="@drawable/person_add"
            app:civ_border_width="1dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="130dp"
            tools:layout_editor_absoluteY="232dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/profText1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/profImage"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:fontFamily="@font/bitter_italic"
            android:gravity="center"
            android:textColor="@color/colorAllBlack"
            android:textSize="20sp" />



        <LinearLayout
            android:id="@+id/LL1_Prof"
            android:layout_width="355dp"
            android:layout_height="332dp"
            android:layout_below="@+id/profText1"
            android:layout_marginTop="6dp"
            android:orientation="vertical"
            android:layout_centerHorizontal="true">


            <LinearLayout
                android:id="@+id/inLL1_Prof"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image1_ProfLL"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_person_fill" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="400dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/btn_gradient_welcome"
            android:fontFamily="@font/bevan"
            android:text="@string/profButton"
            android:textSize="20sp" />


    </RelativeLayout>


</FrameLayout>