<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp"
    android:id="@+id/cv_l">
    
    <LinearLayout
        android:id="@+id/LL1_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15sp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_card"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:contentDescription="@string/cDescript"
            android:scaleType="centerCrop"
            android:src="@drawable/kitchen_r6" />

        <TextView
            android:id="@+id/text1_card"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:fontFamily="@font/baloo"
            android:text="All Equipments"
            android:textColor="@color/colorAllBlack"
            android:textSize="18sp" />
        
        <RatingBar
            android:layout_marginTop="10dp"
            android:id="@+id/rating_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="3.5"
            android:backgroundTint="@color/colorAllBlack"
            android:progressTint="@color/welcome_description_color"
            style="@style/Widget.AppCompat.RatingBar.Small"/>

        <TextView
            android:id="@+id/text2_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bitter_italic"
            android:text="@string/dddksdfdkffkmfdfsdlsd"
            android:textSize="12sp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>